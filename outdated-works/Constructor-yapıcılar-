namespace constructor_yapıcıbloklar_
{                                                   // EN TEMEL HALİYLE YAPICI FONKSİYONLAR,BLOKLAR                
    class Program
    {
        static void Main(string[] args)
        {   //new CustomerManager(10) yazdığımızda burdaki "10" 17. satırdaki int count'un içine gider.
            CustomerManager customerManager = new CustomerManager(10);

            customerManager.List();//çıktısı; listed 10 items

            Console.ReadKey();
        }
    }
    class CustomerManager
    {
        private int _count;
        public CustomerManager(int count)//yapıcı blok
        {
            _count = count;
        }

        public void List()
        {
            Console.WriteLine("Listed {0} items",_count);
        }

        public void Add()
        {
            Console.WriteLine("Added");
        }
         
    }
}

//******************************************   YAPICILARIN AŞIRI YÜKLENMESİ   ***********************************************

namespace constructor_yapıcıbloklar_
{                                                        
    class Program
    {
        static void Main(string[] args)
        {   
            CustomerManager customerManager = new CustomerManager();

            customerManager.List();//çıktısı; listed 15 items

            Console.ReadKey();
        }
    }
    class CustomerManager
    {
        private int _count=15;
        public CustomerManager(int count)//yapıcı blok
        {
            _count = count;
        }
        public CustomerManager()//aşırı yüklenmiş yapıcı blok
        {
            // içine hiçbir şey yazmadık çünkü _count'a ilk değer atanmış biz bu değeri kullanmak istiyoruz. Dolayısıyla customerManager nesnemi oluştururken(43.satır)
            //new CustomerManager() şeklinde parametre vermezsem şu an bulunduğumuz aşırı yüklenmiş blok çalışacak program çıktısı Listed 15 items.
        }

        public void List()
        {
            Console.WriteLine("Listed {0} items",_count);
        }

        public void Add()
        {
            Console.WriteLine("Added");
        }
         
    }
}

//***********************************          FARKLI TARZDA TANIMLAMALAR         **********************************************

namespace constructor_yapıcıbloklar_
{                                                        
    class Program
    {
        static void Main(string[] args)
        {
            Product product1 = new Product();//1
            Product product2 = new Product(2, "computer");//2
            Product product3 = new Product { Id = 3, Name = "Laptop" };//3

            product1.Name = "gpu"; product1.Id = 1;
            

            Console.ReadKey();
        }
    }
    class Product
    {
        public Product()//1
        {

        }

        private int _id;
        private string _name;

        public Product(int id,string name)//2
        {
            _id = id;
            _name = name;
        }

        public int Id { get; set; }//3
        public string Name { get; set; }//3
         
    }
}
