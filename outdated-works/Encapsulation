********************************************************

    class Customer
    {
        public int ID { get; set; }
        
        private string _firstName;
        
        public string FirstName
        {
            get
            {
                return _firstName;
            }
            set
            {
                _firstName = value;
            }
        }
        
        public string LastName { get; set; }
        public string City { get; set; }
    }
