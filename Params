using System;
using System.Linq;   // System.Linq KÜTÜPHANESİNİ KULLANMAMIZ GEREKİYOR "params" İÇİN...

namespace calisma
{
    
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine(Topla(2, 3, 4, 5)); // İSTEDİĞİMİZ KADAR SAYI TOPLAYABİLİRİZ
            Console.ReadKey();

        }

        static int Topla(params int[] sayilar)
        {
            return sayilar.Sum();
        }
  
     
    }

}
