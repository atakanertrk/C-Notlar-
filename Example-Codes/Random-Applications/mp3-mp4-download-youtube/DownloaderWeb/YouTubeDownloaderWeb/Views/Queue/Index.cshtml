@model YouTubeDownloaderWeb.Models.QueueModel


<h2>Queue Items Listed Above</h2>
@{
    if (Model.itemList != null && Model.itemList.Count != 0)
    {
        foreach (var item in Model.itemList)
        {
            <h3>@item</h3>
        }
    }
}


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queue" asp-action="AddToQueue">
            <div class="form-group">
                <label>Add Item To Queue</label>
                <input asp-for="item" class="form-control" required autocomplete="off" />
            </div>
            <input type="submit" name="Add" value="Add" />
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Queue" asp-action="DeleteFromQueue">
            <div class="form-group">
                <label>Delete First Item From Queue. Represents like first in first out</label>
            </div>
            <input type="submit" name="Delete" value="Delete" />
        </form>
    </div>
</div>